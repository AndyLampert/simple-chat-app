extends layout

block content
    .container
        .row
            .col-xs-6.center-block
            h1 Andrew's Chat App
    .container
        .row
            .col-xs-6.center-block
                h4 User 1
                h4 Sent at: time
                .well
                    | message1 
            .col-xs-6.center-block
                h4 User 2
                h4 Sent at: time
                .well
                    | message2

    div#chat-input
        form.bs-example.bs-example-form(role='form')
          .col-lg-6
            .input-group
                textarea.form-control(type='text')
                span.input-group-btn
                    button.btn.btn-default.send-btn(type='button')
                        | Send!
